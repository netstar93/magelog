	<div class="profile-grid">
		<div class="carousel-container profiles row">
			<?php foreach ($profiles as $profile): ?>
				<div class="item col-md-4 col-sm-4 col-xs-12">												
					<div class="profile-content">
						<div class="profile-top">
							<a href="<?php echo $profile->getAddress(); ?>" class="profile-image"><img src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA) .$profile->getPhoto() ?>" class="img-responsive"/></a>
							
							<div class="profile-desc">													
								<a class="profile-name" href="<?php echo $profile->getAddress(); ?>"><?php echo $profile->getName() ?></a>
